<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/missingperson_wrapper"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="11dp"
    android:layout_marginRight="11dp"
    android:layout_marginTop="11dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="7dp"
    android:paddingBottom="7dp"
    android:background="@drawable/cardview_missingperson">
    <ImageView
        android:id="@+id/missingperson_before"
        android:layout_width="95dp"
        android:layout_height="95dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/missingperson_after"/>
    <ImageView
        android:id="@+id/missingperson_after"
        android:layout_width="95dp"
        android:layout_height="95dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/missingperson_before"/>
    <TextView
        android:id="@+id/missingperson_namegenderage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toRightOf="@+id/missingperson_before"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
        android:id="@+id/missingperson_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="4dp"
        android:src="@drawable/icon_heart_empty"
        android:background="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <ImageButton
        android:id="@+id/missingperson_facebook_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="12dp"
        android:src="@drawable/icon_heart_empty"
        android:background="@null"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/missingperson_like" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/missingperson_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="12dp"
        android:textSize="15sp"
        android:textColor="#95989A"
        app:layout_constraintTop_toBottomOf="@+id/missingperson_namegenderage"
        app:layout_constraintLeft_toRightOf="@+id/missingperson_before"/>
    <TextView
        android:id="@+id/missingperson_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="1dp"
        android:textSize="15sp"
        android:textColor="#95989A"
        app:layout_constraintTop_toBottomOf="@+id/missingperson_birth"
        app:layout_constraintLeft_toRightOf="@+id/missingperson_before"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:textSize="25sp"
        android:textColor="@android:color/black"
        android:text="＂"
        app:layout_constraintRight_toLeftOf="@+id/missingperson_aword"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/missingperson_aword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@+id/missingperson_after"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:textSize="25sp"
        android:textColor="@android:color/black"
        android:text="＂"
        app:layout_constraintLeft_toRightOf="@+id/missingperson_aword"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>